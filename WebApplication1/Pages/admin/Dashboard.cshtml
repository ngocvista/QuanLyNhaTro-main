@page "/admin/dashboard"
@model MotelManagement.Pages.admin.DashboardModel
@{
}

<div class="main-wrapper">
    <div class="content container-fluid" style="padding: 0px">
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col">
                    <br />
                    <h4 class="card-title float-left mt-2">Thống kê</h4>
                    <div class="mt-5">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-body">
                                        <canvas id="mainChart" style="width: 100%;height:400px;"></canvas>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-body">
                                        <canvas id="myPieChart" style="width: 100%;height:400px;"></canvas>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{


    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        const barCtx = document.getElementById('mainChart');

        new Chart(barCtx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.BarChartDatas.Select(d=>d.RoomTypeName).ToList())),
                datasets: [{
                    label: 'Số tiền',
                    data: @Html.Raw(Json.Serialize(Model.BarChartDatas.Select(d=>d.TotalRevenue).ToList())),
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(255, 159, 64, 0.2)',
                        'rgba(255, 205, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(201, 203, 207, 0.2)'
                    ],
                    borderColor: [
                        'rgb(255, 99, 132)',
                        'rgb(255, 159, 64)',
                        'rgb(255, 205, 86)',
                        'rgb(75, 192, 192)',
                        'rgb(54, 162, 235)',
                        'rgb(153, 102, 255)',
                        'rgb(201, 203, 207)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        var data2 = {
            labels: @Html.Raw(Json.Serialize(Model.PieChartDatas.Select(d=>d.Label).ToList())),
            datasets: [{
                label: 'Số lượng phòng',
                data: @Html.Raw(Json.Serialize(Model.PieChartDatas.Select(d=>d.Count).ToList())),
                backgroundColor: [
                    'rgb(255, 99, 132)',
                    'rgb(54, 162, 235)',
                    'rgb(255, 205, 86)',
                    'rgb(75, 192, 192)',
                    'rgb(153, 102, 255)',
                    'rgb(255, 159, 64)'
                ],
                hoverOffset: 4 
            }]
        };

        var options2 = {
            responsive: true,
            maintainAspectRatio: false
        };

        // Tạo biểu đồ Pie
        var ctx = document.getElementById('myPieChart').getContext('2d');
        var myPieChart = new Chart(ctx, {
            type: 'pie',
            data: data2,
            options: options2
        });
    </script>
}