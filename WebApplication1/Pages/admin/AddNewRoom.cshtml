@page "/admin/room/addnew"
@using MotelManagement.Data.Models
@model MotelManagement.Pages.admin.AddNewRoom
@{
}
<div class="register-area" style="background-color: rgb(249, 249, 249);">
    <div class="container" style="padding: 30px; margin-top:40px">
        
        <div class="col-md-6" style="width:50%; margin:0 auto">
            <div class="box-for overflow">
                <div class="col-md-12 col-xs-12 register-blocks">
                    <h2 class="text-center">Thêm phòng mới </h2>
                    <form method="post" asp-page-handler="Addnew" enctype="multipart/form-data">
                        <div class="form-group">
                            <label >Nhập tên phòng</label>
                            <input type="text" class="form-control" name="Name">
                        </div>
                        <div class="form-group">
                            <label>Miêu tả phòng</label>
                            <input type="text" class="form-control" name="Description">
                        </div>
                        <div class="form-group">
                            <label>Giá phòng</label>
                            <input type="number" class="form-control" name="Price">
                        </div>
                        <div class="form-group">
                            <label>Số người tối đa</label>
                            <input type="text" class="form-control" name="MaxPerson">
                        </div>
                        <div class="form-group">
                            <label>Kiểu phòng</label>
                            <select class="form-control" name="RoomTypeId">
                                @foreach (RoomType roomType in (List<RoomType>)@ViewData["roomTypes"])
                                {
                                    if (roomType.RoomTypeId == Convert.ToInt32(ViewData["roomTypeId"]))
                                    {
                                        <option selected="selected" value="@roomType.RoomTypeId">@roomType.Name</option>
                                    }
                                    else
                                    {
                                        <option value="@roomType.RoomTypeId">@roomType.Name</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Chọn ảnh phòng</label>
                            <input type="file" class="form-control" name="fileimage" multiple>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-outline-success">Thêm mới</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
